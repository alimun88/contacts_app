      <div class="form-group">
        <%= f.label :street_name %>
        <%= f.text_field :street_name, class: "form-control input-box", placeholder: "Street Name", autofocus: true %>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.label :address2 %>
        <%= f.text_field :address2, class: "form-control input-box", placeholder: "Address 2", autofocus: true %>
      </div>
    </div>
   </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control input-box", placeholder: "City", autofocus: true %>
      </div>
  </div>
  <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :state %>
        <%= f.text_field :state, class: "form-control input-box", placeholder: "State", autofocus: true %>
      </div>
