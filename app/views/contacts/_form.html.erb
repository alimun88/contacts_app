      <%= f.label :home_phone %>
      <%= f.text_field :home_phone, class: "form-control input-box", placeholder: "Home Phone Number", autofocus: true %>
    </div>
  </div>
  <div class='col-sm-4'>
    <div class="form-group">
      <%= f.label :mobile_phone %>
      <%= f.text_field :mobile_phone, class: "form-control input-box", placeholder: "Mobile Phone Number", autofocus: true %>
    </div>
  </div>
  </div>
  
